<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--圆形图片-->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_thickness" format="dimension" />
        <attr name="border_outside_thickness" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>
<!--表情viewpager-->
    <declare-styleable name="UserJazzyViewPager">
            <attr name="style_sdk">
            <enum name="standard_sdk" value="0" />
            <enum name="tablet_sdk" value="1" />
            <enum name="cubein_sdk" value="2" />
            <enum name="cubeout_sdk" value="3" />
            <enum name="flipvertical_sdk" value="4" />
            <enum name="fliphorizontal_sdk" value="5" />
            <enum name="stack_sdk" value="6" />
            <enum name="zoomin_sdk" value="7" />
            <enum name="zoomout_sdk" value="8" />
            <enum name="rotateup_sdk" value="9" />
            <enum name="rotatedown_sdk" value="10" />
            <enum name="accordion_sdk" value="11" />
        </attr>
        <attr name="fadeJazzEnabled_sdk" format="boolean" />
        <attr name="outlineEnabled_sdk" format="boolean" />
        <attr name="outlineColor_sdk" format="color|reference" />
    </declare-styleable>


    <declare-styleable name="ViewPagerIndicator">

        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
        <!-- Style of the icon indicator's views. -->
        <attr name="vpiIconPageIndicatorStyle" format="reference" />
        <!-- Style of the line indicator. -->
        <attr name="vpiLinePageIndicatorStyle" format="reference" />
        <!-- Style of the title indicator. -->
        <attr name="vpiTitlePageIndicatorStyle" format="reference" />
        <!-- Style of the tab indicator's tabs. -->
        <attr name="vpiTabPageIndicatorStyle" format="reference" />
        <!-- Style of the underline indicator. -->
        <attr name="vpiUnderlinePageIndicatorStyle" format="reference" />
    </declare-styleable>

    <attr name="centered" format="boolean" />
    <attr name="yr_selectedColor" format="color" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="unselectedColor" format="color" />

    <declare-styleable name="CirclePageIndicator">

        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="yr_radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>

    //自定义图片的属性
    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension"/>
        <attr name="angle" format="dimension"/>
        <attr name="arrowHeight" format="dimension"/>
        <attr name="arrowPosition" format="dimension"/>
        <attr name="bubbleColor" format="color"/>
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00"/>
            <enum name="right" value="0x01"/>
            <enum name="top" value="0x02"/>
            <enum name="bottom" value="0x03"/>
        </attr>
    </declare-styleable>
    //自定义声音的属性
    <declare-styleable name="CustomVoiceView">
        <attr name="location" format="integer"/>
    </declare-styleable>


    <declare-styleable name="play">
        <attr name="play_line_color" format="color" />
        <attr name="play_bg_line_color" format="color" />
        <attr name="play_line_width" format="integer" />
        <attr name="play_bg_line_width" format="integer" />
    </declare-styleable>

    <declare-styleable name="download">
        <attr name="download_line_color" format="color" />
        <attr name="download_bg_line_color" format="color" />
        <attr name="download_text_color" format="color" />
        <attr name="download_line_width" format="integer" />
        <attr name="download_bg_line_width" format="integer" />
        <attr name="download_text_size" format="integer" />
    </declare-styleable>

</resources>
