<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_session_click_text_content"
        android:gravity="right"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <chat.icloudsoft.userwebchatlib.widget.ClickListView
                android:id="@+id/type_session_click_text_recycle_desc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/session_to_chat_pp_bg_selector"
                android:text="右边"
                />
            <ImageView
                android:id="@+id/type_session_click_text_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/type_session_click_text_recycle_desc"
                android:src="@drawable/imcc_user_online"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>



</RelativeLayout>
</RelativeLayout>
