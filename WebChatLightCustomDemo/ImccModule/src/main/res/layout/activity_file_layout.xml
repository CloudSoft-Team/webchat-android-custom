<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <chat.icloudsoft.userwebchatlib.view.TopMenuBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_file_layout_top_menu"
        ></chat.icloudsoft.userwebchatlib.view.TopMenuBar>
    <chat.icloudsoft.userwebchatlib.view.TitleTabView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/activity_file_layout_ttv"
        ></chat.icloudsoft.userwebchatlib.view.TitleTabView>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_file_layout_viewpager"
        >
    </android.support.v4.view.ViewPager>
</LinearLayout>